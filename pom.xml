    <developerConnection>scm:git:ssh://git@github.com:Terradue/dcs-doris-ifg</developerConnection>
    <url>https://github.com/Terradue/dcs-doris-ifg</url>
    <tag>HEAD</tag>
  </scm>
  <properties>
    <summary>Adore Doris DCS</summary>
    <description>Adore Doris Developer Cloud Sandbox</description>
    <community>geohazards-tep</community>
    <yumRepo>geohazards-tep</yumRepo>
    <mission/>
  </properties>
